<head>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Phase 63</title>

        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Favicon icon-->
        <link rel="shortcut icon" type="image/x-icon" href="img/Logo_2.png">

        <!-- Libs CSS -->

        <link rel="stylesheet" href="prismjs/themes/prism.css">
        <link rel="stylesheet" href="prismjs/plugins/line-numbers/prism-line-numbers.css">
        <link rel="stylesheet" href="prismjs/plugins/toolbar/prism-toolbar.css">
        <link rel="stylesheet" href="bootstrap-icons/font/bootstrap-icons.css">
        <link rel="stylesheet" href="dropzone/dist/dropzone.css">
        <link href="@mdi/font/css/materialdesignicons.min.css" rel="stylesheet" />

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.css">

        <!-- Theme CSS -->
        <!-- build:css @@webRoot/assets/css/theme.min.css -->
        <link rel="stylesheet" href="css/theme.css">
        <link rel="stylesheet" href="css/mahasiswa.css">

        <!-- endbuild -->

        <!-- Jquery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <title>Dashboard Panitia</title>

    </head>

<body>
    <div id="db-wrapper">
        <!-- Page content -->
        <div id="page-content">
            <%- include('partials/header') %>

                <!-- Container fluid -->
                <div class="bg-primary pt-10 pb-21"></div>
                <div class="container-fluid mt-n22 px-6">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-12">
                            <!-- Page header -->
                            <div>
                                <a class="mt-3 text-white inline-flex items-center" href="/home">Kembali Ke Home</a>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="mb-2 mb-lg-0">
                                        <h3 class="mb-0 fw-bold text-white">Dashboard Panitia</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12 col-12 mt-6">
                            <!-- card -->
                            <div class="card rounded-3">
                                <!-- card body -->
                                <div class="card-body">
                                    <!-- heading -->
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="mb-0">WELCOME</h4>
                                        </div>
                                        <div class="icon-shape icon-md bg-light-primary text-primary rounded-1">
                                            <i class="bi bi-people fs-4"></i>
                                        </div>
                                    </div>
                                    <!-- project number -->
                                    <div>
                                        <h1 class="fw-bold">
                                            <% maba.nama %>
                                                <%= uname %>
                                        </h1>
                                        <p class="mb-0"><span class="text-success me-2">Kelompok</span><span
                                                class="text-dark me-2">
                                                <% maba.kelompok %>
                                                    <%= role %>
                                            </span></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-6 col-md-12 col-12 mt-6">
                            <!-- card -->
                            <div class="card rounded-3">
                                <!-- card body -->
                                <div class="card-body">
                                    <!-- heading -->
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="mb-0">TUGAS</h4>
                                        </div>
                                        <div class="icon-shape icon-md bg-light-primary text-primary rounded-1">
                                            <i class="bi bi-briefcase fs-4"></i>
                                        </div>
                                    </div>
                                    <!-- project number -->
                                    <div>
                                        <h1 class="fw-bold">
                                            <%= tugas.length %>
                                        </h1>
                                        <p class="mb-0"><span class="text-dark me-2">0</span>Completed</p>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12 col-12 mt-6">
                            <!-- card -->
                            <div class="card rounded-3">
                                <!-- card body -->
                                <div class="card-body">
                                    <!-- heading -->
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h4 class="mb-0">Motto Assessor</h4>
                                        </div>
                                        <div class="icon-shape icon-md bg-light-primary text-primary rounded-1">
                                            <i class="bi bi-bullseye fs-4"></i>
                                        </div>
                                    </div>
                                    <!-- project number -->
                                    <div>
                                        <h4 class="fw-bold">Gatau sii kita mh sbenernya btuh tugas doang</h4>
                                        <p class="mb-0"><span class="text-success me-2">Oleh</span>Zara Kania (11
                                            September 2021)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- row  -->
                    <div class="row mt-6">
                        <div class="col-md-12 col-12">
                            <!-- card  -->
                            <div class="card">
                                <!-- card header  -->
                                <div class="card-header project-header bg-white border-bottom-0 py-4">
                                    <h4 class="mb-0">Active Projects</h4>
                                    <div>
                                        <button type="button" class="add-project" id="add-project"
                                            onclick="formPopup()">Add New Project</button>
                                    </div>
                                </div>
                                <div class="popup-position">
                                    <span class="popup-content" id="popup-addproject">
                                        <form class="addproject-form" action="/panitUpload" method="POST">
                                            <a class="close-popup" onclick="formClose()"><i
                                                    class="bi bi-x-square"></i></a>

                                            <label for="judul">Project Name :</label>
                                            <input class="title form-data" type="text" name="judul"
                                                placeholder="Project Title" autocomplete="off" required><br>

                                            <div class="splitted">
                                                <label for="project-type">Project Type :</label><br>
                                                <select name="jenis" class="type form-data" autocomplete="off" required>
                                                    <option value="">--Select Type--</option>
                                                    <option value="Tugas">Assessment</option>
                                                    <option value="Quiz">Quiz</option>
                                                </select><br>

                                                <label for="deadline">Project Deadline : </label><br>
                                                <input class="date form-data" type="datetime-local" name="deadline"
                                                    placeholder="Project Deadline" autocomplete="off" required><br>
                                            </div>

                                            <label for="deskripsi">Project Description :</label><br>
                                            <textarea class="description form-data" name="deskripsi"
                                                placeholder="Project Description" autocomplete="off"
                                                required></textarea><br>

                                            <button class="submit-form button-data" type="submit"
                                                name="project-add-button">Add Project!</button>
                                        </form>
                                    </span>
                                </div>


                                <!-- table  -->
                                <div class="table-responsive">
                                    <table class="table text-nowrap mb-0 table-project">
                                        <thead class="table-light table-head">
                                            <tr class="table-row">
                                                <th class="middle-align">Judul</th>
                                                <th class="middle-align">Jenis</th>
                                                <th class="middle-align">Deadline</th>
                                                <th class="middle-align">Unduh File</th>
                                            </tr>
                                        </thead>
                                        <tbody class="table-body">
                                            <% if (tugas.length !==0) { %>
                                                <% tugas.forEach((tugasMaba)=> { %>

                                                    <span class="popup-deletecontent" id="popup-delete">
                                                        <form class="deleteproject-form" method="POST"
                                                            action="/removeTugas/<%= tugasMaba.id %>">
                                                            <div class="delete-content">
                                                                <h3>Are you sure want to delete it?</h3>
                                                                <div class="splitted mt-3 mb-3">
                                                                    <button class="button-confirm">Hell Yeah!</button>
                                                                    <a class="close-confirm"
                                                                        onclick="formCloseDelete()">Nevermind...</a>
                                                                </div>
                                                                <div class="warning">
                                                                    <h5>WARNING!</h5>
                                                                    <p>Your action cannot be undone. Please Proceed with
                                                                        caution.</p>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </span>

                                                    <tr>
                                                        <td class="align-middle">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <div
                                                                        class="icon-shape icon-md border p-4 rounded-1">
                                                                        <a onclick="formPopupDelete()">
                                                                            <i class="bi bi-trash-fill icon-delete"
                                                                                style="font-size: 25px;"></i>
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                                <div class="ms-3 lh-1">
                                                                    <h5 class="fw-bold mb-1">
                                                                        <%= tugasMaba.judul %>
                                                                    </h5>

                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="align-middle middle-align">
                                                            <%= tugasMaba.jenis %>
                                                        </td>
                                                        <td class="align-middle middle-align"><span
                                                                class="badge bg-danger">
                                                                <%= tugasMaba.deadline.toDateString() %>, <%=
                                                                        tugasMaba.deadline.getHours() %>:<%=
                                                                            tugasMaba.deadline.getMinutes() %>
                                                            </span></td>

                                                        <td class="align-middle text-dark middle-align">
                                                            <a href="/file-download/"
                                                                class="text-inherit">Open tab</a>
                                                        </td>
                                                    </tr>
                                        </tbody>
                                        <% }) %>
                                            <% } else { %>
                                                <h3 class="announcement">There is no active project yet.</h3>
                                                <% } %>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row my-6">

                        <!-- card  -->
                        <div class="col-xl-12 col-lg-12">
                            <div class="card h-100">
                                <!-- card header  -->
                                <div class="card-header bg-white border-bottom-0 py-4">
                                    <h4 class="mb-0">Teams</h4>
                                </div>
                                <!-- table  -->
                                <div class="table-responsive">
                                    <table class="table text-nowrap">
                                        <thead class="table-light table-head">
                                            <tr class="table-row">
                                                <th class="middle-align">Name</th>
                                                <th>Alamat</th>
                                                <th>Whatsapp</th>
                                                <!-- <th>File Tugas</th> -->
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (maba.length !==0) { %>
                                                <% maba.forEach((mabas)=> { %>
                                                    <tr>
                                                        <td class="align-middle">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <img src="https://media.unpad.ac.id/photo/mahasiswa/140310/2021/<%= mabas.npm %>.JPG"
                                                                        alt="" class="avatar-md avatar rounded-circle"
                                                                        style="object-fit: cover;">
                                                                </div>
                                                                <div class="ms-3 lh-1">
                                                                    <h5 class="fw-bold mb-1">
                                                                        <%= mabas.nama %>
                                                                    </h5>
                                                                    <p class="mb-0">
                                                                        <%= mabas.npm %>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="align-middle">
                                                            <%= mabas.alamat %>
                                                        </td>
                                                        <td class="align-middle">
                                                            <%= mabas.wa %>
                                                        </td>
                                                        <!-- <td class="align-middle">
                                                            <% if (mabas.file.length !== 0){ %>
                                                                <% mabas.file.forEach((file, index) => { %>
                                                                    <a href="/dashPanit/<%= mabas.npm %>@<%= file.date %>@<%= file.time %>.pdf" target="_blank">Tugas <%= index + 1 %></a>
                                                                <% }) %>
                                                            <% } else { %>
                                                                <p>Belum ada tugas yang dikumpulkan</p>
                                                            <% } %>
                                                        </td> -->
                                                    </tr>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <h3 class="announcement">You don't have a team yet.</h3>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>

    <!-- Scripts -->
    <%- include('partials/scripts') %>

        <script>
            function formPopup() {
                var popup = document.getElementById("popup-addproject");
                popup.classList.toggle("show");
            }
            function formClose() {
                var popup = document.getElementById("popup-addproject");
                popup.classList.remove("show");
            }
            function formPopupDelete() {
                var popup = document.getElementById("popup-delete");
                popup.classList.toggle("show");
            }
            function formCloseDelete() {
                var popup = document.getElementById("popup-delete");
                popup.classList.remove("show");
            }
        </script>

</body>

</html>